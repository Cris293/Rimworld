<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>SpotlightTurret</defName>
    <label>spotlight turret</label>
    <description>A spothlight mounted on a turret. Can automatically lock onto a nearby hostile.</description>
    <thingClass>SpotlightTurret.Building_SpotlightTurret</thingClass>
    <graphicData>
      <texPath>Things/Building/Security/TurretImprovised</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/MenuIcon_SpotlightTurret</uiIconPath>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>true</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <WorkToBuild>1500</WorkToBuild>
      <Mass>25</Mass>
      <Beauty>-10</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>25</costStuffCount>
    <costList>
      <Steel>50</Steel>
      <Component>1</Component>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>30</specialDisplayRadius>
    <researchPrerequisites>
      <li>ResearchSpotlightTurret</li>
    </researchPrerequisites>
  </ThingDef>
  
</Defs>