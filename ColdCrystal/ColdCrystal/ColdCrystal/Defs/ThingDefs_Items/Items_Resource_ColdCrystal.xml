<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>ColdCrystal</defName>
    <label>cold crystal</label>
    <description>As hard as it is cold, this strange crystal can be used to light an area. It seems to absorb the surrounding heat.</description>
    <graphicData>
      <texPath>Things/Item/Resource/ColdCrystal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>ChunkRock_Drop</soundInteract>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <statBases>
      <Beauty>0</Beauty>
      <Mass>2.5</Mass>
      <MarketValue>35</MarketValue>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stackLimit>3</stackLimit>
    <deepCommonality>1</deepCommonality>
    <deepCountPerPortion>3</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>2</min>
      <max>7</max>
    </deepLumpSizeRange>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(44,177,244,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <heatPerSecond>-1</heatPerSecond>
        <heatPushMinTemperature>-15</heatPushMinTemperature>
      </li>
    </comps>
  </ThingDef>

</Defs>
